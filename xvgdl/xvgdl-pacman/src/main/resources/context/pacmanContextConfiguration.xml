<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!--
    Definition of pacman game
-->

<gameDefinition>

    <layout>
        <component id="gameInfo" location="TOP">
            <objectRef id="score" />
            <objectRef id="hiScore" />
        </component>

        <component id="gameInfo" location="DOWN">
            <objectRef id="lives" />
            <objectRef id="items" />
        </component>
    </layout>

    <map type="2D" sizeX="25" sizeY="30" toroidal="false" generator="es.jor.phd.xvgdl.model.map.GameMapGenerator">
    </map>

    <!-- Defining the Objects present in the game (NPCs, Obsctacles, projectiles,
        structures, collectibles, etc... -->
    <objects>
        <object id="wall" type="wall" dynamic="false" volatile="false" renderer="wallRenderer" sizeX="1" sizeY="1" instances="100" />
        <object id="ghost" type="enemy" dynamic="true" volatile="true"
            renderer="ghostRenderer" size="1,1" instances="4" />
        <object id="pacman" type="player" dynamic="true" volatile="true"
            renderer="pacmanRenderer" size="1,1" instances="1" />
        <object id="smallDot" type="item" dynamic="true" volatile="true"
            renderer="dotRenderer" size="1,1" instances="100" />
        <object id="bigDot" type="item" dynamic="true" volatile="true"
            renderer="bigDotRenderer" size="1,1" instances="10" />
        <object id="cherry" type="item" dynamic="true" volatile="true"
            renderer="cherryRenderer" size="1,1" instances="0" />
    </objects>

    <!-- Players Definition -->
    <players number="1" maxNumber="1" minNumber="1">
        <player id="Player 1" objectRef="pacman" />
    </players>

    <!-- Avatars ? -->
    <avatars>
    </avatars>

    <!-- Defining Game physics. Movements and collisions Define set of possible
        physics action: gravitational pull, friction, repulsion forces, bouncing
        effects, stickiness, etc Define the -->
    <physics>
    </physics>

    <!-- Defining game events. Events sent from the player via input devices,
        timed or random events, and object collision triggered events that affect
        the game -->
    <events>
    </events>

    <!-- Defining rules. Events consecuences -->
    <rules>
        <!-- Rule for pacman eating small dots -->
        <rule id="eatSmallDot" type="eventual">
            <objectRef id="pacman" action="scoreUp,100" />
            <objectRef id="smallDot" action="disappear" />
        </rule>
        <!-- Rule for pacman eating big dots -->
        <rule id="eatBigDot" type="eventual">
            <objectRef id="pacman" action="scoreUp,500" />
            <objectRef id="bigDot" action="disappear" />
        </rule>

        <!-- Rule for pacman eating all dots -->
        <rule id="dotsCounter" type="permanent">
            <action condition="0" consequence="????" />
        </rule>
    </rules>
</gameDefinition>
